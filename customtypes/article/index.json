{
  "id": "article",
  "label": "Article",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "URL Slug",
          "placeholder": "unique-article-slug"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Article headline",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "Brief summary of the article",
          "allowTargetBlank": true,
          "multi": "paragraph"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 1200,
            "height": 630
          },
          "thumbnails": [
            {
              "name": "thumbnail",
              "width": 400,
              "height": 300
            },
            {
              "name": "mobile",
              "width": 800,
              "height": 600
            }
          ]
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "Select a category",
          "options": [
            "Business",
            "Politics",
            "Sports",
            "Entertainment",
            "Lifestyle",
            "Arts",
            "International",
            "Technology",
            "Health",
            "Science"
          ]
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Text",
              "config": {
                "label": "Tag",
                "placeholder": "Enter a tag"
              }
            }
          }
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "Author Name",
          "placeholder": "John Doe"
        }
      },
      "author_image": {
        "type": "Image",
        "config": {
          "label": "Author Image",
          "constraint": {
            "width": 200,
            "height": 200
          },
          "thumbnails": []
        }
      },
      "author_bio": {
        "type": "StructuredText",
        "config": {
          "label": "Author Bio",
          "placeholder": "Brief author biography",
          "allowTargetBlank": true,
          "multi": "paragraph"
        }
      },
      "publish_date": {
        "type": "Date",
        "config": {
          "label": "Publish Date",
          "placeholder": ""
        }
      },
      "read_time": {
        "type": "Number",
        "config": {
          "label": "Read Time (minutes)",
          "placeholder": "5"
        }
      },
      "featured": {
        "type": "Boolean",
        "config": {
          "label": "Featured Article",
          "placeholder_false": "No",
          "placeholder_true": "Yes",
          "default_value": false
        }
      },
      "content": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "rich_text": {
              "type": "SharedSlice"
            },
            "article": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "SEO title for search engines"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "SEO description for search engines"
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "label": "Meta Image",
          "constraint": {
            "width": 1200,
            "height": 630
          },
          "thumbnails": []
        }
      }
    }
  }
}
